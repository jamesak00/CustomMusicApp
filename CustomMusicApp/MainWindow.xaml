<Window x:Class="CustomMusicApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomMusicApp"
        mc:Ignorable="d"
        WindowState="Maximized"
        Title="JSH Custom Music Player" Height="1400" Width="2565">
    <Window.Resources>
        <Style x:Key="MySliderStyle" TargetType="Slider">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Slider">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto" MinHeight="{TemplateBinding Slider.MinHeight}"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TickBar x:Name="TopTick" Visibility="Collapsed"/>
                            <Border x:Name="TrackBackground" Grid.Row="1" Margin="5,0" Height="15" VerticalAlignment="Center" Background="#FFC5C1C1" BorderBrush="#FF808080" BorderThickness="1">
                                <Canvas Margin="-6,-1">
                                    <Rectangle x:Name="PART_SelectionRange" Height="4" Fill="#FF606060" Stroke="#FF404040" StrokeThickness="1"/>
                                </Canvas>
                            </Border>
                            <Track x:Name="PART_Track" Grid.Row="1">
                                <Track.Thumb>
                                    <Thumb x:Name="Thumb" DragStarted="Thumb_DragStarted" DragCompleted="Thumb_DragCompleted">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Rectangle Width="20" Height="40" Fill="#FFC1C1C1" Stroke="#FF808080" StrokeThickness="1"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                            <TickBar x:Name="BottomTick" Visibility="Collapsed" Grid.Row="2"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Label" x:Key="Outlined">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Label}">
                        <Grid>
                            <TextBlock Text="{TemplateBinding Content}" Foreground="Black" FontSize="20" FontWeight="Bold">
                                <TextBlock.Effect>
                                    <DropShadowEffect ShadowDepth="0" BlurRadius="10" Color="White"/>
                                </TextBlock.Effect>
                            </TextBlock>
                            <TextBlock Text="{TemplateBinding Content}" Foreground="Black" FontSize="20" FontWeight="Bold"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <ContextMenu x:Key="mainCtx">
            <MenuItem x:Name="addToMenuItem" Header="Add to..."/>
            <MenuItem Header="Remove" Click="RemoveMenuItem_Click"/>
            <MenuItem Header="Rename"/>
            <Separator/>
            <MenuItem Header="Copy Song Name" Click="CopySongName_Click"/>
            <MenuItem Header="Copy Song Path" Click="CopySongPath_Click"/>
            <Separator/>
            <MenuItem Header="Open in Audacity" Click="OpenInAudacity_Click"/>
        </ContextMenu>


    </Window.Resources>
    <Grid>

        <Grid x:Name="grdAlbums" Margin="0,0,1918,284">
            <ListView x:Name="listViewAlbums" d:ItemsSource="{d:SampleData ItemCount=5}" MouseDoubleClick="listViewAlbums_MouseDoubleClick" Margin="11,215,9,363">
                <ListView.ContextMenu>
                    <ContextMenu>
                        <MenuItem Header="Add" Click="Add_Click"/>
                        <MenuItem Header="Rename" Click="Rename_Click"/>
                        <MenuItem Header="Remove" Click="Remove_Click"/>
                        <MenuItem Header="Duplicate" Click="Duplicate_Click"/>
                    </ContextMenu>

                </ListView.ContextMenu>
            </ListView>

            <TextBox x:Name="txtSearchBar" HorizontalAlignment="Center" VerticalAlignment="Top" Width="625" Margin="0,197,0,0"/>
        </Grid>

        <Grid x:Name="grdMusicList" Margin="647,0,890,393">
            <TextBox x:Name="txtConsole" Margin="10,50,10,0" Height="100" VerticalAlignment="Top"/>
            <TabControl x:Name="playerTab" Margin="0,221,0,0" SelectionChanged="playerTab_SelectionChanged">
                <TabItem x:Name="musicLibTab" Header="Music Library">
                    <ListView x:Name="listBoxMusicLib"  d:ItemsSource="{d:SampleData ItemCount=5}" MouseDoubleClick="listBoxMusicLib_MouseDoubleClick" SelectionChanged="listBoxMusicLib_SelectionChanged">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="ContextMenu" Value="{StaticResource mainCtx}"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </TabItem>
                <TabItem x:Name="albumSongTab" Header="Album Songs">
                    <ListView x:Name="listBoxAlbumSongs" d:ItemsSource="{d:SampleData ItemCount=5}" MouseDoubleClick="listBoxAlbumSongs_MouseDoubleClick" SelectionChanged="listBoxAlbumSongs_SelectionChanged">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="ContextMenu" Value="{StaticResource mainCtx}"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </TabItem>
                <TabItem x:Name="searchTab" Header="Search Results">
                    <Grid>
                        <ListView x:Name="listBoxSearchResults" MouseDoubleClick="listBoxSearchResults_MouseDoubleClick" SelectionChanged="listBoxSearchResults_SelectionChanged" Margin="0,0,0,35">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="ContextMenu" Value="{StaticResource mainCtx}"/>
                                </Style>
                            </ListView.ItemContainerStyle>
                        </ListView>
                        <Label x:Name="lblNumOfRes" Content="" Margin="432,712,432,0"></Label>
                    </Grid>
                </TabItem>
                <TabItem x:Name="playTab" Header="Play Queue">
                    <ListView x:Name="listBoxSongs" d:ItemsSource="{d:SampleData ItemCount=5}" MouseDoubleClick="listBoxSongs_MouseDoubleClick" SelectionChanged="listBoxSongs_SelectionChanged">
                        <ListView.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="ContextMenu" Value="{StaticResource mainCtx}"/>
                            </Style>
                        </ListView.ItemContainerStyle>
                    </ListView>
                </TabItem>
            </TabControl>


        </Grid>

        <Grid x:Name="grdMetadata" Margin="1675,0,0,393">
            <Image x:Name="albumArt" HorizontalAlignment="Left" VerticalAlignment="Bottom" Stretch="Uniform" Margin="0,0,0,250" />
        </Grid>

        <Grid x:Name="grdPlayer" Margin="0,996,0,-261">
            <Button x:Name="btn_play" Content="Play" Margin="1137,138,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Click="btn_play_Click" Height="48" Width="148"/>
            <Button x:Name="btn_next" Content="Next" Margin="1315,138,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Click="btn_next_Click" Height="48" Width="49"/>
            <Button x:Name="btn_prev" Content="Prev" Margin="1056,140,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Click="btn_prev_Click" Height="44" Width="52"/>
            <Button x:Name="btn_loop" Content="Loop" Margin="1469,165,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Click="btn_loop_Click"/>
            <Button x:Name="btn_shuffle" Content="Shuffle" Margin="1526,164,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Click="btn_shuffle_Click"/>
            <Button x:Name="btn_shufflePlay" Content="Shuffle and Play" Margin="1137,80,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Click="btn_shufflePlay_Click" Height="47" Width="148"/>
            <Button x:Name="btn_seekBack" Content="&lt;- 5" Margin="1004,162,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Click="btn_seekBack_Click" RenderTransformOrigin="0.766,0.979"/>
            <Button x:Name="btn_seekForw" Content="5 -&gt;" Margin="1389,164,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Click="btn_seekForw_Click"/>

            <Label Style="{StaticResource Outlined}" x:Name="lblSongName" Content="Song Name" Margin="12,100,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            <Label Style="{StaticResource Outlined}" x:Name="lblSongLength" Content="00:00" Margin="2500,164,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>
            <Label Style="{StaticResource Outlined}" x:Name="lblCurrentTime" Content="00:00" Margin="12,161,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"/>

            <Slider x:Name="seekSlider" Minimum="0" Maximum="1" ValueChanged="SeekSlider_ValueChanged" Style="{StaticResource MySliderStyle}" Margin="12,202,8,398" Panel.ZIndex="1" IsMoveToPointEnabled="True" PreviewMouseLeftButtonDown="SeekSlider_PreviewMouseLeftButtonDown"/>


        </Grid>

    </Grid>

</Window>
